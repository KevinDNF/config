!--------------Font-----------------
!
urxvt.font: xft:IBMPlexMono Nerd Font Mono:pixelsize=15:antialias=true:style:bold

urxvt*intensityStyles: true
urxvt.allow_bold: true
urxvt*boldFont: xft:IBMPlexMono Nerd Font Mono:style:Bold:pixelsize=18:antialias=true
urxvt*italicFont: xft:IBMPlexMono Nerd Font Mono:style=Italic:pixelsize=18:antialias=true
urxvt*bolditalicFont: xft:IBMPlexMono Nerd Font Mono:style=Bold Italic:pixelsize=18:antialias=true

urxvt*letterSpace: 0
urxvt*lineSpace: 0

!--------------Other-----------------

urxvt*internalBorder: 10
urxvt.scrollBar: false
urxvt*depth: 32
urxvt.saveLines: 9999
urxvt.iso14755: false
urxvt.cursorUnderline: false
urxvt*dynamicColors: on

!--------------Perl-----------------

urxvt.perl-ext-common: default,matcher,resize-font
!resize font: ctrl + + and ctrl + -

!URL Matcher Settings
urxvt.url-launcher: /usr/bin/vivaldi-stable
urxvt.matcher.button: 1
urxvt.matcher.rend.0: ULine Bold fg10

!------------Colors-----------------

!------ Transparency

!real transparency
!urxvt*background: rgba:0000/0000/0200/c800

