!--------------Font-----------------
!
urxvt.font: xft:IBM Plex Mono:style=regular:pixelsize=15:antialias=true

urxvt*intensityStyles: true
urxvt.allow_bold: true
urxvt*boldFont: xft:IBM Plex Mono:style:Bold:pixelsize=18:antialias=true
urxvt*italicFont: xft:IBM Plex Mono:style=Italic:pixelsize=18:antialias=true
urxvt*bolditalicFont: xft:IBM Plex Mono:style=Bold Italic:pixelsize=18:antialias=true

urxvt*letterSpace: 0
urxvt*lineSpace: 0

!--------------Other-----------------

urxvt*internalBorder: 10
urxvt.scrollBar: false
urxvt*depth: 32
urxvt.saveLines: 9999
urxvt.iso14755: false
urxvt.cursorUnderline: false

!--------------Perl-----------------

urxvt.perl-ext-common: default,matcher,resize-font
!resize font: ctrl + + and ctrl + -

!URL Matcher Settings
urxvt.url-launcher: /usr/bin/vivaldi-stable
urxvt.matcher.button: 1
urxvt.matcher.rend.0: ULine Bold fg10

