[module/cmus]
type = custom/script
exec = sh ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1

[module/xkeyboard]
type = internal/xkeyboard
;blacklist-0 = num lock

format-prefix =
format-prefix-foreground = ${colors.foreground}
format-prefix-underline =

label-layout =
label-layout-underline =

label-indicator-padding = 2
label-indicator-margin = 0
label-indicator-background = ${colors.background-alt}
label-indicator-foreground = ${colors.foreground-alt}
label-indicator-underline =

[module/filesystem]
type = internal/fs
interval = 25
spacing = 0

mount-0 = /
mount-1 = /home
mount-2 = /mnt

label-mounted =" %mountpoint%: %percentage_used%% |"
label-unmounted =

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.foreground-alt}
label-focused-underline= 
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-background = ${colors.background-alt}
label-empty-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true 
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.primary}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused =[%index%]
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground-alt}
label-focused-underline =
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${colors.background-alt} 
label-visible-foreground = ${colors.foreground-alt} 
label-visible-underline =
label-visible-padding = 2

; urgent = Workspace with urgency hint set
label-urgent = ALERT!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

